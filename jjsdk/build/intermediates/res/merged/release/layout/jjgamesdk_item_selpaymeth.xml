<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/jjgamesdk_sel_item_selpaymeth"
    android:paddingBottom="6dp"
    android:paddingTop="6dp" >

    <ImageView
        android:id="@+id/jjgm_spm_item_icon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/jjgmsdk_stub"
        android:scaleType="fitCenter"
        android:src="@drawable/jjgamesdk_btn_jj" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.4"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jjgm_spm_item_paymeth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jjgmsdk_stub"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
	    <TextView
	        android:id="@+id/jjgm_spm_item_cost"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"        
	        android:gravity="right"
	        android:text="@string/jjgmsdk_stub"
	        android:textColor="@android:color/black"
	        android:textSize="15sp" />
	    
	    <TextView
            android:id="@+id/jjgm_spm_item_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:text="@string/jjgmsdk_stub"
            android:textColor="#F5574C"
            android:textSize="13sp" />
    
    </LinearLayout>

    <ImageView
        android:id="@+id/jjgm_spm_item_expand"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/jjgmsdk_stub"
        android:scaleType="fitCenter"
        android:src="@drawable/jjgamesdk_btn_expand" />

</LinearLayout>
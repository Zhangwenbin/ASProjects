<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jjgamesdk_shape_rc_header"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/jjgm_header_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/jjgamesdk_sel_btn_back"
        android:gravity="center_vertical"
        android:onClick="clickAction"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/jjgmsdk_stub"
            android:scaleType="fitCenter"
            android:src="@drawable/jjgamesdk_btn_back" />

        <TextView
            android:id="@+id/jjgm_header_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/jjgmsdk_stub"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/jjgm_header_close"
        android:layout_width="@dimen/jjgm_header_height"
        android:layout_height="@dimen/jjgm_header_height"
        android:background="@drawable/jjgamesdk_sel_btn_close"
        android:onClick="clickAction" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/jjgmsdk_stub"
            android:scaleType="fitCenter"
            android:src="@drawable/jjgamesdk_btn_close" />
    </RelativeLayout>

</LinearLayout>
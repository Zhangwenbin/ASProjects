<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jjgamesdk_shape_rc_header"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/jjgm_header_jjicon"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/jjgamesdk_jj_logo"
        android:contentDescription="@string/jjgmsdk_stub"/>
    
    <TextView
        android:id="@+id/jjgm_header_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:text="@string/jjgmsdk_stub"
        android:textColor="@android:color/black"
        android:textSize="18sp" />        

    <RelativeLayout
        android:id="@+id/jjgm_header_close"
        android:layout_width="@dimen/jjgm_header_height"
        android:layout_height="@dimen/jjgm_header_height"
        android:background="@drawable/jjgamesdk_sel_btn_close"
        android:onClick="clickAction" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/jjgmsdk_stub"
            android:scaleType="fitCenter"
            android:src="@drawable/jjgamesdk_btn_close" />
    </RelativeLayout>

</LinearLayout>